{
  "name": "g21-adhd-server",
  "version": "1.0.0",
  "description": "This is the server side for the G21 application - Embodied therapeutical gaming for children with ADHD. Refer to the README.md and the documentation for further information",
  "main": "index.js",
  "type": "module",
 "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "reset-db": "node ./db/reset-db.js",
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --runInBand --detectOpenHandles",
    "test:watch": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --watch --runInBand",
    "test:coverage": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --coverage --runInBand"
},
  "repository": {
    "type": "git",
    "url": "https://github.com/caoxantb/g21-adhd-kinesthetic-game.git"
  },
  "author": "Xuan-An Cao, Risha Parveen, Annan Wu, Erfan Niketeghad, Minh Khanh Pham, Quang Minh Nguyen & Tuukka Tikkakoski",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/caoxantb/g21-adhd-kinesthetic-game/issues"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.3",
    "mongoose-unique-validator": "^4.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.2",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0"
  }
}
